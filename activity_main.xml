<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dominik.mylockaplication.MainActivity"
    android:background="#f0f1ef"
    android:clickable="true"
    android:id="@+id/background">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="witaj w platformie do logowania"
        android:id="@+id/welcomeText"
        android:textSize="50px"
        android:focusable="false"
        android:gravity="center"
        android:layout_marginTop="30px"
        android:textColor="#020000" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/welcomeText"
    android:id="@+id/linear1"
    android:layout_marginTop="55dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wpisz login"
        android:id="@+id/loginText"
        android:textSize="50px"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textStyle="bold"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etLogin"
        android:layout_weight="0.5"
        android:background="#e1dfdf" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:id="@+id/linear2"
        android:layout_marginTop="30dp"
        android:touchscreenBlocksFocus="false"
        android:transitionGroup="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wpisz haslo"
            android:id="@+id/passwordText"
            android:textSize="50px"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textStyle="bold"
            android:singleLine="true"
            android:textIsSelectable="true" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_weight="0.5"
            android:contextClickable="false"
            android:background="#e1dfdf" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaloguj"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/linear2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30px"

       />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dodaj nowego użytkownika"
        android:id="@+id/textViewDodajUżytkownika"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="54dp"
        android:nestedScrollingEnabled="true"
        android:textSize="40px"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:textColor="#f50b0b"
        android:layout_alignParentRight="true"
        />



</RelativeLayout>
